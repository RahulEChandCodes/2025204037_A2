<database>
  <table name="users">
    <column name="id" type="int" pk="true" />
    <column name="email" type="varchar" />
    <column name="name" type="varchar" />
    <column name="created_at" type="timestamp" />
  </table>
  <table name="orders">
    <column name="id" type="int" pk="true" />
    <column name="user_id" type="int" fk="users.id" />
    <column name="total" type="decimal" />
    <column name="status" type="varchar" />
    <column name="created_at" type="timestamp" />
  </table>
  <table name="products">
    <column name="id" type="int" pk="true" />
    <column name="name" type="varchar" />
    <column name="price" type="decimal" />
    <column name="category_id" type="int" fk="categories.id" />
    <column name="stock_quantity" type="int" />
  </table>
  <table name="categories">
    <column name="id" type="int" pk="true" />
    <column name="name" type="varchar" />
    <column name="description" type="text" />
  </table>
  <table name="order_items">
    <column name="id" type="int" pk="true" />
    <column name="order_id" type="int" fk="orders.id" />
    <column name="product_id" type="int" fk="products.id" />
    <column name="quantity" type="int" />
    <column name="unit_price" type="decimal" />
  </table>
</database>